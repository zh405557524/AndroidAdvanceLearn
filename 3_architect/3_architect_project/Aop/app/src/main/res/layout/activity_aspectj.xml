<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aspectj.AspectjActivity">

    <Button
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的专区"
        app:layout_constraintLeft_toLeftOf="@id/bt_login"
        app:layout_constraintRight_toRightOf="@id/bt_login"
        app:layout_constraintTop_toBottomOf="@id/bt_login" />

    <Button
        android:id="@+id/bt_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的优惠券"
        app:layout_constraintLeft_toLeftOf="@id/bt_area"
        app:layout_constraintRight_toRightOf="@id/bt_area"
        app:layout_constraintTop_toBottomOf="@id/bt_area" />

    <Button
        android:id="@+id/bt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的积分"
        app:layout_constraintLeft_toLeftOf="@id/bt_coupon"
        app:layout_constraintRight_toRightOf="@id/bt_coupon"
        app:layout_constraintTop_toBottomOf="@id/bt_coupon" />


</androidx.constraintlayout.widget.ConstraintLayout>